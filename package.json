{
  "name": "causal-graph-visualizer",
  "version": "1.0.1", 
  "description": "Interactive graph visualization and editing tool",
  "author": "Erik",
  "type": "module",
  "main": "electron/electron-main.cjs",
  "homepage": "./",
  "scripts": {
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron .",
    "start": "npm run electron:build",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.erik.causal-graph-visualizer",
    "productName": "Causal Graph Visualizer",
    "publish": null,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^38.1.2",
    "jest": "^29.7.0",
    "vite": "^6.3.6",
    "concurrently": "^9.1.0",
    "wait-on": "^8.0.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.1",
    "d3": "^7.9.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "dagre": "^0.8.5"
  }
}